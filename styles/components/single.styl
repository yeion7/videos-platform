.single
  &-player
    width: 100%
    min-height: 50vh
    background: lighten(#000, 10%)
    position: relative;
    display: flex
    justify-content: center;
    align-items: center

  &-options
    display: none

    @media screen and (min-width: 1025px) {
      display: flex;
      justify-content: center
      align-items: center
      position: absolute;
      bottom: 0
      right: 0
      padding: 0 15px 15px 0
    }

  &-sections
    display: flex;
    margin-top: 15px
    flex-direction: column
    align-items: center
    @media screen and (min-width: 769px) {
      flex-direction: row;
      align-items: stretch;
    }

  &-social
    flex 1 1 60%
    margin 0 15px
    padding: 10px
    background white

  &-icon
    color $color-primary
    &-social
      color white
      background red
      border-radius: 50%
      padding: .5em
      margin-right: .5em
      cursor: pointer;

  &-info
    margin-bottom: 30px
    &-artist
      font-size: 1.3em
      color $color-primary
      font-weight: bold;

    &-name
      font-size: 1.8em
      font-weight: bold;
      margin: 5px 0

    &-inf
      margin-bottom: 15px

    &-views
      font-weight: bold;
      font-size: .8em
      margin-right: 2em

    &-time
    &-likes
    &-comments
      font-size: .8em
      color: #aaa
      font-weight: bold;

    &-share
      margin: 30px 0

    &-description
      color #aaa
      line-height: 1.3em

  &-comments
    &-order
      display: flex
      justify-content: space-between;
      margin-bottom: 15px

    &-title
      font-weight: bold;
      font-size: 1.2em

    &-ultimos
    &-populares
      font-size: .9em
      font-weight: bold;
      margin-left: .5em
      cursor: pointer
      padding: .5em
      border-radius: 5px
      &:active
        background:$color-primary
        color white


    &-write
      display: flex;
      justify-content: space-between;
      align-items: center
      margin-bottom: 35px

    &-avatar
      width: 70px
      height: 70px
      border-radius: 50%
      flex none


      &-small
        flex none
        width: 40px
        height: 40px
        border-radius: 50%

    &-form
      margin-left: 10px
      height: 100%
      flex auto

    &-input
      width: 100%
      border: 1px solid #aaa
      border-radius: 4px
      padding: 10px
      height: 70px
      font-family: sans-serif;

    &-comment
      padding-left: 25px
      margin-top: 15px

    &-top
      display: flex;
      align-items: center;
      margin-bottom: 15px

    &-user
      text-transform: uppercase;
      color $color-primary
      padding: 0 1em
      font-weight: bold;

    &-text
      padding-left: 50px


  &-videos
    flex 1 1 30%
    margin: 0 15px
    display: flex;
    flex-direction: column;

    &-section
      font-size: 1.5em
      font-weight: bold;
      margin: 15px 0
      @media screen and (min-width: 769px) {
        margin-bottom: 15px
        margin-top: 0
      }


    &-video
      width: 100%
      height: 130px
      display: flex;
      background: white
      margin 10px 0

    &-img
      width: 40%
      height: 100%

    &-info
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      padding: 10px

    &-title
      font-weight: bold;
      font-size: 1em
      line-height: 1.2em

    &-time
      color $color-primary
      font-weight: bold;
      font-size: .9em














.player
  &-container
    display: flex;
    justify-content: center
    align-items: center
    width: 80%
    height: 100%

    & video
      width: 100%
      height: 100%


.icon-social
  &-facebook
    background: #3b5998

  &-twitter
    background: #00aced

  &-plus
    background: #dd4b39;

  &-mail
    background: grey
  &-share
    background: #5CB85C
