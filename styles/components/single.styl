.single
  &-player
    width: 100%
    min-height: 50vh
    background: lighten(#000, 10%)
    position: relative;
    display: flex
    justify-content: center;
    align-items: center



  &-sections
    display: flex;

  &-comments
    flex 1 1 70%
    height: 300px
    background: blue


  &-videos
    flex 1 1 30%
    height: 300px
    background: green

  &-options
    display: none

    @media screen and (min-width: 1025px) {
      display: flex;
      justify-content: center
      align-items: center
      position: absolute;
      bottom: 0
      right: 0
      padding: 0 15px 15px 0
    }




.player
  &-container
    display: flex;
    justify-content: center
    align-items: center
    width: 80%
    height: 100%

    & video
      width: 100%
      height: 100%
