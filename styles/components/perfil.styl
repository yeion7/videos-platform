.perfil

  &-container
    width: 100%
    height: 100%
    padding: 15px
    display: flex;
    justify-content: center;
    align-items: flex-end;
    flex-wrap: wrap;

    @media screen and (min-width: 769px) {
      justify-content: space-between;
    }

  &-avatar
    width: 120px
    height: 120px
    border-radius: 50%
    margin-right: 15px

  &-info
    display: flex;
    flex-direction: column;
    justify-content: space-around;



  &-text
    font-weight: bold;
    font-size: .9em

  &-editar
    color $color-primary
    cursor: pointer;
    font-size: .7em
    font-weight: bold;

  &-categories
    display: flex
    margin-top: 25px
    width: 100%
    justify-content: center;
    @media screen and (min-width: 769px) {
      width: auto;
      margin-left: 50px
      align-self: flex-end;
    }

    & div
      display: flex;
      flex-direction: column;

  &-image
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%
    margin: 15px 0
    @media screen and (min-width: 769px) {

      width: auto;
      margin 0 50px

    }


  &-img
    width: 80px
    height: 80px
    margin: 10px 0

  &-options
    display: flex;
    flex-direction: column;
    align-items: center
    width: 100%
    @media screen and (min-width: 769px) {
      width: auto;

    }
    @media screen and (min-width: 1025px) {

      margin-left: 50px
    }

  &-icon
    color #aaa
    font-size: 1.6em
    margin-left.5em

  &-number
    color $color-primary
    font-weight: bold;
    font-size: 2em

  &-stat
    order -1
    margin 15px 0
    @media screen and (min-width: 769px) {
      width: auto;
      margin 0
      margin-bottom: 50px

    }
