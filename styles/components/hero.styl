.hero
  &-container
    width: 100%
    min-height: 80vh
    max-height: 500px
    overflow: hidden;
    background: #111
    position: relative;

  &-cover
    width: 200%
    height: 100%
    @media screen and (min-width: 769px) {
      width: 100%
    }
    & img
      width: 100%
      height: 100%
  &-play
    position: absolute;
    z-index: 100
    top 50%
    left: 50%
    transform: translate(-50%, -50%);
    font-size: 6em
    cursor pointer
    color $color-primary
    box-shadow: inset 0 0 .7em $color-primary
    padding: 0
    border-radius: 50%


  &-bottom
    position absolute
    bottom: 0
    left 0
    width 100%
    height: 80px
    background: linear-gradient(to top, #000, rgba(0, 0, 0, 0))
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    padding: 15px



.video
  &-artist
    color $color-primary
    font-weight: bold;
    font-size: 1em
    padding: .3em 0
    @media screen and (min-width: 769px) {
        font-size: 1.5em
      }
  &-name
    color white
    font-size: 1.5em
    font-weight: bold;
    @media screen and (min-width: 769px) {
    font-size: 2.5em
    }

  &-options
    display: flex;
    align-items: center
    justify-content: flex-end;

  &-genere
    color $color-primary
    border 2px solid
    padding: .4em .8em
    border-radius: 8px
    margin: 0px .5em

  &-views
  &-likes
    cursor pointer
    color $color-primary
    font-size: 2em
    margin 0 .5em

  &-points
    margin .5em

  &-point
    color $color-primary
    margin .2em
    cursor pointer
    border-radius: 50%

  &-point_active
    background: $color-primary


.player
  &-container
    width 80%
    height: 100%
    position: relative;
    top 50%
    left 50%
    transform: translate(-50%, -50%);
    background: #ddd

    & video
      width 100%
      height: 100%

.hiden
  display: none
